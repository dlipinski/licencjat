doctype html
html(lang='pl')
    head
        include ../partial/head.pug
        script(src='searchScript.js')
    body
        include ../partial/header.pug
        main.container
            .card
                .card-header
                    h3 Doctor
                .card-body
                    .form-group
                            label(for='area') Area
                            select#area.selectpicker.form-control(name='area')
                                option(value=0) Select
                                each area in areas
                                    option(value=area.id)= area.name
                    .form-group#symptomsGroup
                            label(for='symptoms') Symptoms
                            select#symptoms.selectpicker.form-control(name='symptoms', multiple)
                                each area in areas
                                    option(value=area.id)= area.name
                .card-footer.p-0
                    button.btn.btn-primary.btn-block#searchButton Search
                    
            .card.mt-3#disaesCard
                .card-header.text-center 
                    h5 Disaes
                .card-body#disaeContainer




